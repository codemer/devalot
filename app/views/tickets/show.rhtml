<% @page_title = "Ticket #{@ticket.id}" %>

<div id="ticket_history" style="display: none;"></div>
<div id="ticket_files"   style="display: none;"></div>

<div id="ticket_attributes">
  <%= render(:partial => 'attributes') %>
</div>

<div id="ticket_summary">
  <%= render(:partial => 'summary') %>
</div>

<h1>Tags: <%= render_tag_editor(@ticket) %></h1>
<%= tag_cloud_for(@ticket) %>

<%= comment_section_for(@ticket) %>
