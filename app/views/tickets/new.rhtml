<% generate_form_for(@ticket) do |form| %>
  <% form.text_area(:summary, "Description:") %>
  <% form.collection_select(:severity_id, "Severity:", Severity.find(:all), :id, :title) %>
  <% form.button("Create") %>
  <% form.button("Cancel", :cancel => {:action => 'show', :controller => 'projects', :id => @project}) %>
<% end %>
