<% caption = '<h2>History: ' + link_to_function(icon_tag(:cross), nil, :class => 'icon_link') {|p| p << visual_effect(:toggle_slide, :ticket_history)} + '</h2>' %>
<%= table_for(TicketHistory, {
  :object       => @ticket, 
  :association  => :histories, 
  :sort         => [:created_on, :desc],
}).to_html(:caption => caption) %>
