<% generate_form_for(@stickie, :legend => @page_title) do |form| %>
  <% form.subform(filtered_text_form(@stickie.filtered_text, 'Message')) %>
  <% form.collection_select(:message_type, _('Message Type:'), Stickie::MESSAGE_TYPES, :to_s, :to_s) %>
  <% form.button(@stickie.new_record? ? _('Create') : _('Update')) %>
  <% form.button(_('Cancel'), :url => {:action => 'list'}) %>
<% end %>
