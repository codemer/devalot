begin
  require 'gettext/rmsgfmt'
rescue LoadError
  begin
    require 'rubygems'
    require_gem 'gettext/rmsgfmt'
  rescue LoadError
    raise 'Ruby-GetText-Package are not installed.'
  end
end

GetText.rmsgfmt
