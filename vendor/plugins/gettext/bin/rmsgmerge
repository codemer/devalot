begin
  require 'gettext/rmsgmerge'
rescue LoadError
  begin
    require 'rubygems'
    require_gem 'gettext/rmsgmerge'
  rescue LoadError
    raise 'Ruby-GetText-Package are not installed.'
  end
end

GetText.rmsgmerge
